<body class="p-4 md:p-12" x-data="roiCalculator()">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Calculadora de Lucro Retido</h1>
            <p class="text-gray-500">Descubra quanto dinheiro sua empresa deixa de ganhar por falhas de produtividade.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <div class="lg:col-span-1 space-y-6 bg-white p-8 rounded-3xl card-shadow border border-gray-100">
                <h2 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">Dados da Empresa</h2>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Faturamento Mensal (R$)</label>
                    <input type="number" x-model="revenue" class="w-full p-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nº de Vendedores</label>
                    <input type="number" x-model="sellers" class="w-full p-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Horas Perdidas/Dia (Planilha)</label>
                    <input type="range" min="0.5" max="3" step="0.5" x-model="lostTime" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-blue-600">
                    <div class="text-right text-sm font-bold text-blue-600" x-text="lostTime + ' hora(s)'"></div>
                </div>

                <div class="pt-4 border-t">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Fator de Reuso do Tempo (%)</label>
                    <p class="text-xs text-gray-400 mb-2">Se liberarmos 1h, quanto ele usará para vender?</p>
                    <input type="range" min="10" max="100" step="10" x-model="efficiency" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-green-500">
                    <div class="text-right text-sm font-bold text-green-600" x-text="efficiency + '%'"></div>
                </div>
            </div>

            <div class="lg:col-span-2 space-y-8">
                
                <div class="bg-white p-8 rounded-3xl card-shadow border-l-8 border-red-500">
                    <h3 class="text-red-600 font-bold uppercase tracking-wider text-xs mb-4">Realidade Atual (Perda)</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <p class="text-gray-500 text-sm">Dinheiro na Mesa (Mensal)</p>
                            <p class="text-3xl font-bold text-gray-900" x-text="formatMoney(monthlyLoss)"></p>
                        </div>
                        <div>
                            <p class="text-gray-500 text-sm">Tempo Desperdiçado (Equipe/Ano)</p>
                            <p class="text-3xl font-bold text-gray-900" x-text="totalYearlyHours + ' Horas'"></p>
                        </div>
                    </div>
                </div>

                <div class="bg-blue-600 p-8 rounded-3xl card-shadow text-white relative overflow-hidden">
                    <div class="relative z-10">
                        <h3 class="text-blue-100 font-bold uppercase tracking-wider text-xs mb-4">Potencial com CotaFlow & Tany</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <p class="text-blue-100 text-sm">Novo Faturamento Mensal (Projeção)</p>
                                <p class="text-4xl font-bold" x-text="formatMoney(monthlyGain)"></p>
                            </div>
                            <div>
                                <p class="text-blue-100 text-sm">Faturamento Extra Anual</p>
                                <p class="text-4xl font-bold text-green-400" x-text="formatMoney(monthlyGain * 12)"></p>
                            </div>
                        </div>
                        <div class="mt-8 pt-6 border-t border-blue-500 flex items-center justify-between">
                            <span class="text-sm">ROI Estimado (12 meses):</span>
                            <span class="text-2xl font-bold" x-text="roiValue + 'x o investimento'"></span>
                        </div>
                    </div>
                    <div class="absolute top-0 right-0 -mt-8 -mr-8 w-32 h-32 bg-blue-500 rounded-full opacity-50"></div>
                </div>

                <div class="bg-gray-900 p-6 rounded-2xl flex flex-col md:flex-row items-center justify-between">
                    <p class="text-gray-400 text-sm mb-4 md:mb-0">Pronto para recuperar esses <strong class="text-white" x-text="formatMoney(monthlyGain * 12)"></strong>?</p>
                    <button class="bg-white text-gray-900 px-8 py-3 rounded-xl font-bold hover:bg-gray-100 transition-all">Agendar Implementação</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function roiCalculator() {
            return {
                revenue: 1000000,
                sellers: 10,
                lostTime: 1,
                efficiency: 50,
                
                get hourlyRate() {
                    const revPerSeller = this.revenue / (this.sellers || 1);
                    return revPerSeller / (22 * 8); // Base 22 dias, 8h/dia
                },

                get monthlyLoss() {
                    return (this.hourlyRate * this.lostTime) * 22 * this.sellers;
                },

                get monthlyGain() {
                    return (this.monthlyLoss * (this.efficiency / 100));
                },

                get totalYearlyHours() {
                    return Math.round(this.lostTime * 22 * 12 * this.sellers);
                },

                get roiValue() {
                    const annualGain = this.monthlyGain * 12;
                    const totalCost = 100000 + (this.sellers * 1000 * 12); // Setup 100k + Licença anual
                    return (annualGain / totalCost).toFixed(1);
                },

                formatMoney(value) {
                    return new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(value);
                }
            }
        }
    </script>
</body>
